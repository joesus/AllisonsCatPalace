'use strict';

/* App Module */

var App = angular.module('Kittens', [
  'ngRoute',
  'ngResource',
  'kittenControllers',
  'kittenServices'
]);

App.config(['$routeProvider', '$locationProvider',
  function($routeProvider, $locationProvider) {
    $locationProvider.html5Mode(true);
    $routeProvider.
      when('/kittens', {
        templateUrl: "<%= asset_path('kitten-index.html') %>",
        controller: 'KittenIndexCtrl'
      }).
      when('/kitten-list', {
        templateUrl: "<%= asset_path('kitten-list.html') %>",
        controller: 'KittenListCtrl'
      }).
      when('/kittens/:id', {
        templateUrl: "<%= asset_path('kitten-show.html') %>",
        controller: 'KittenShowCtrl'
      }).
      when("/kittens/:id/edit", { templateUrl: "<%= asset_path('kitten-edit.html') %> ",
        controller: "KittenEditCtrl" }).
      otherwise({
        redirectTo: '/kittens'
      });
  }]);